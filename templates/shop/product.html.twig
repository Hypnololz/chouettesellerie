{% extends 'base.html.twig' %}
{% block title %}produit{% endblock %}

{% block body %}
    <div class="container">

        <h1 class="text-center">Boutique !</h1>
        <div class="row my-4">
            <div class="col-12 col-md-12   pt-2 col-xl-3 text-center">
                <a href="{{ path('shop_gammes')~'?searcharea=soins' }}">
                    <button class="btn bg-bleumarine text-gold fw-bold w-75" type="button"><i
                                class=" me-2 fas fa-hand-holding-medical"></i>
                        Gamme Soins
                    </button>
                </a>
            </div>
            <div class="col-12  col-md-12  pt-2 col-xl-3 text-center">
                <a href="{{ path('shop_gammes')~'?searcharea=cavalier' }}">
                    <button class="btn bg-bleumarine text-gold fw-bold w-75" type="button"><i
                                class=" me-2 fas fa-hat-cowboy-side"></i> Gamme Cavalier
                    </button>
                </a>
            </div>
            <div class="col-12 col-md-12  pt-2 col-xl-3 text-center">
                <a href="{{ path('shop_gammes')~'?searcharea=cheval' }}">
                    <button class="btn bg-bleumarine text-gold fw-bold w-75" type="button"><i
                                class=" me-2 fas fa-horse"></i> Gamme Cheval
                    </button>
                </a>
            </div>
            <div class="col-12 col-md-12  pt-2 col-xl-3 text-center">
                <a href="{{ path('shop_gammes')~'?searcharea=chien' }}">
                    <button class="btn bg-bleumarine text-gold fw-bold w-75" type="button"><i
                                class=" me-2 fas fa-paw"></i> Gamme Chien
                    </button>
                </a>
            </div>
        </div>
        <div class="row">
            {% for product in product %}
                <div class="card col-12 mx-auto col-lg-3" style="width: 20rem;">
                    <img src="{{ asset('img/produit/'~product.photo) }}" class="card-img-top" alt="">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }} de chez {{ product.brand }}</h5>
                        <p class="card-text"> description : {{ product.description|slice(0,50)~'...' }}</p>
                        <p class="card-text"> prix : {{ product.price }} €</p>
                        <a href="{{ path('shop_product.detail', {'slug': product.slug}) }}"
                           class="btn bg-bleumarine text-gold productDetail">détails</a>
                    </div>
                </div>
            {% endfor %}
        </div>
            <div class="my-3 text-center">
                <div class="d-inline-block text-gold">
                    {{ knp_pagination_render(product) }}
                </div>
            </div>
    </div>
{% endblock %}


